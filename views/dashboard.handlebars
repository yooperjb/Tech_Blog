<section>
    <h2 class="welcome">Welcome {{user.username}}</h2>
    <h3>Create New Post</h3>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-text">Text</label>
            <textarea id="post-text" name="post-text"></textarea>
        </div>
        <button type="submit" class="btn">Create Post</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>